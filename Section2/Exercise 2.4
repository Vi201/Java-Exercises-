package PoundConversion;
import java.util.Scanner;

 /*(Convert pounds into kilogramse) Write a program that converts pounds into 
    kilograms. The program prompts the user to enter a number in pounds, converts
    it to kilograms and displays the result. One pound is 0.454 kilograms
*/
public class PoundConversion
{    
    public static void main(String[] args)
    {   
        // Create a Scanner object
        Scanner input = new Scanner(System.in);
        
        // Variables
        final double kilogram = 0.454;
        double kilograms, pounds;
        
        System.out.print("Enter a number in pounds: ");
        pounds = input.nextDouble();
        
        // Converts pounds to kilograms
        kilograms = pounds * kilogram;
        
        // Outputs to screen
        System.out.println(pounds + " pounds is " + kilograms + " kilograms.");
    }
}
