package VolumeofCylinder;
import java.util.Scanner;

 /*(Compute the volumn of a cylinder) Write a program that reads in the
    radius and length of a cylinder and computes the area and volume using
    the following formulas:

    area = radius * radius * PI
    volume = area * length
*/
public class VolumeofCylinder
{    
    public static void main(String[] args)
    {   
        // Create a Scanner object
        Scanner input = new Scanner(System.in);
        
        // Constant Variable
        final double PI = 3.14159;
        
        // Variables
        double radius, area, volume;
        int length; 
        
        // Outputs to Screen
        System.out.print("Enter the radius and length of a cylinder: ");
        radius = input.nextDouble();
        length = input.nextInt();
        
        // Formulas
        area = radius * radius * PI; // Calculates the area 
        volume = area * length; // Calculates the volume
       
        // Prints result
        System.out.println("The area is " + area);
        System.out.println("The volume is " + volume);
    }
}
